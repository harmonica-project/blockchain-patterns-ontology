:Owens2019Interfamily rdf:type owl:NamedIndividual ,
                          :Paper ;

:Authors "Owens, Luke and Razet, Benoit and Smith, W. Bryan and Tanner, Theodore C."^^rdfs:Literal ;
:Year "2019"^^rdfs:Literal ;
